<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- When pressed -->
    <item android:state_pressed="true" >
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid
                android:color="@color/level_button_pressed" />
            <stroke
                android:width="5dp"
                android:color="@color/level_button_default" />
            <corners
                android:radius="55dp" />

            <size
                android:height="50dp"
                android:width="80dp" />
        </shape>
    </item>

    <!-- Default -->
    <item android:state_pressed="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid
                android:color="@color/level_button_default_light" />
            <stroke
                android:width="1dp"
                android:color="@color/level_button_default_light" />
            <corners
                android:radius="60dp" />
            <size
                android:height="30dp"
                android:width="80dp" />
        </shape>
    </item>

    <!-- Default -->
    <item android:state_enabled="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid
                android:color="@color/custom_button_disabled" />
            <stroke
                android:width="1dp"
                android:color="@color/custom_button_disabled" />
            <corners
                android:radius="60dp" />
            <size
                android:height="30dp"
                android:width="80dp" />
        </shape>
    </item>
</selector>